{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "esnext"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "noImplicitAny": true,
        "allowUnusedLabels": false,
        "alwaysStrict": true,
        "strict": true,
        "baseUrl": "./",
        "declaration": false,
        "outDir": "dist",
        "experimentalDecorators": true,
        "jsx": "react",
        "paths": {
            "*": ["src/*"]
        },
        "module": "commonjs",
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "exclude": [
        "node_modules"
    ]
}